<div data-ng-controller="ZwaveCtrl as vm">

    <div class="box skin-box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Zwave</h3>
            <div class="box-tools pull-right">
                <div class="btn-group open">
                    <button type="button" class="btn btn-primary btn-flat btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="true">Gestion du réseau</button>
                    <ul class="dropdown-menu" role="menu">
                    <li><a href="" ng-click="vm.addNode()">Inclure un noeud</a></li>
                    <li><a href="">Exclure un noeud</a></li>
                    <li class="divider"></li>
                    <li><a href="" ng-click="vm.healNetwork()">Guérir le réseau</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="box-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id du nœud</th>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>Fabricant</th>
                        <th>Produit</th>
                        <th>Configuration</th>
                    </tr>
                </thead>
                <tbody>      
                    <tr ng-repeat="node in vm.nodes" class="ng-cloak">
                        <td>{{node.info_node.node_id}}</td>
                        <td>
                            <input class="form-control input-sm" type="text" ng-model="node.info_node.name" ng-change="vm.setNodeName(node.info_node.node_id, node.info_node.name)">
                        </td>
                        <td>{{node.info_node.type}}</td>
                        <td>{{node.info_node.manufacturer}}</td>
                        <td>{{node.info_node.product}}</td>
                        <td>
                            <button class="btn btn-flat btn-primary" data-toggle="modal" data-target=".zwave-config" ng-click="vm.selectedNode = node;">Configurer</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div id="zwave-config" class="modal fade zwave-config" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                    <h4 class="modal-title" id="myLargeModalLabel">Configuration du Noeud</h4>
                </div>
                <div class="modal-body">
                    <div ng-repeat="param in vm.selectedNode.params">
                        <div class="row">
                            <div class="col-lg-4">
                                <strong>{{param.index}} - {{param.name}}</strong>
                            </div>
                            <div class="col-lg-8">
                                <div class="row" ng-show="param.type != 'list'">
                                    <div class="col-lg-3">
                                        <input class="form-control input-sm" type="text" value="{{param.value}}">
                                    </div>
                                    <div class="col-lg-9">
                                        <span  ng-show="param.unit != ''">({{param.unit}})</span>
                                    </div>
                                </div>
                                <div class="row" ng-show="param.type == 'list'">
                                    <div class="col-lg-6">
                                        <select class="form-control">
                                            <option ng-repeat="item in param.item" ng-selected="param.value == item" value="{{item}}">{{item}}</option>
                                        </select>
                                    </div>
                                    <div class="col-lg-6">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br>
                        <p class="text-muted">{{param.help}}</p>
                        <hr>
                    </div>  
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Appliquer la configuration</button>
                </div>
            </div>
        </div>
    </div>
</div>
    